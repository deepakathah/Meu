
{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx",
    "src/app/_layout.jsx",
    "src/app/(auth)/**/*.jsx",
    "src/app/(main)/**/*.jsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
